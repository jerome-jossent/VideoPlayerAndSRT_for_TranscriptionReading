<UserControl x:Class="AudioVolumeAmplitudeGraph.Pastille"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AudioVolumeAmplitudeGraph"
             mc:Ignorable="d" 
             d:DesignHeight="10" d:DesignWidth="10">
    <Viewbox Stretch="Fill">
        <Canvas Height="50" Width="50" Background="Transparent" MouseEnter="_eli_MouseEnter" MouseLeave="_eli_MouseLeave" >
            <Ellipse x:Name="_eli" Stroke="Black" Width="50" Height="50" StrokeThickness="1" Fill="AliceBlue" />
            <TextBlock x:Name="_tbk" Text="99" FontSize="30" Width="50" Height="50" Padding="3" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" />
        </Canvas>
    </Viewbox>
</UserControl>
